<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdioCheckbox2"
            android:layout_below="@+id/rdioCheckbox1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="63dp"
            android:layout_marginEnd="63dp" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Log in"
            android:id="@+id/editTextUser"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textEditMainLoginPassword"
            android:layout_alignEnd="@+id/textEditMainLoginPassword"></EditText>

        <EditText
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:id="@+id/textEditMainLoginPassword"
            android:hint="Enter Password"
            android:layout_below="@+id/editTextUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:text="R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdioCheckbox1"
            android:layout_alignBaseline="@+id/editTextUser"
            android:layout_alignBottom="@+id/editTextUser"
            android:layout_alignLeft="@+id/rdioCheckbox2"
            android:layout_alignStart="@+id/rdioCheckbox2" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/cmdMainOK"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StartBrowser"
                android:id="@+id/cmdMainStartBrowser"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Options"
                android:id="@+id/cmdMainOptions"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StartProgress"
                android:id="@+id/cmdMainStartProgress"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CallForm"
                android:id="@+id/cmdMainCallForm"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cmbAM" />

            <Button
                android:text="Take Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cmdMainTakePhoto" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cmdMainCancel"
                />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barMainLoginProgress" />

</LinearLayout>
